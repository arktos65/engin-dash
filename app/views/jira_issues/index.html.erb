<p id="notice"><%= notice %></p>

<h1>Jira Issues</h1>

<table>
  <thead>
    <tr>
      <th>Jira issue</th>
      <th>Jira project</th>
      <th>Issue key</th>
      <th>Issue url</th>
      <th>Issue title</th>
      <th>Issue status</th>
      <th>Issue type</th>
      <th>Story points</th>
      <th>Issue created</th>
      <th>Issue updated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jira_issues.each do |jira_issue| %>
      <tr>
        <td><%= jira_issue.jira_issue_id %></td>
        <td><%= jira_issue.jira_project_id %></td>
        <td><%= jira_issue.issue_key %></td>
        <td><%= jira_issue.issue_url %></td>
        <td><%= jira_issue.issue_title %></td>
        <td><%= jira_issue.issue_status %></td>
        <td><%= jira_issue.issue_type %></td>
        <td><%= jira_issue.story_points %></td>
        <td><%= jira_issue.issue_created %></td>
        <td><%= jira_issue.issue_updated %></td>
        <td><%= link_to 'Show', jira_issue %></td>
        <td><%= link_to 'Edit', edit_jira_issue_path(jira_issue) %></td>
        <td><%= link_to 'Destroy', jira_issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

