<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>Member</th>
      <th>Project</th>
      <th>Currency</th>
      <th>Annual rate</th>
      <th>Weekly rate</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Allocation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.member_id %></td>
        <td><%= team.project_id %></td>
        <td><%= team.currency_id %></td>
        <td><%= team.annual_rate %></td>
        <td><%= team.weekly_rate %></td>
        <td><%= team.start_date %></td>
        <td><%= team.end_date %></td>
        <td><%= team.allocation %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

